{
    "include": ["src/*.ts"],
    "compilerOptions": {
        "strict": true,
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "allowUnusedLabels": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["esnext"],
        "declaration": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "node",
        "outDir": "build"
    }
}
