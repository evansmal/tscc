{
    "include": ["src/*.ts", "test/*.ts"],
    "compilerOptions": {
        "strict": true,
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "allowUnusedLabels": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["esnext"],
        "declaration": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "module": "NodeNext",
        "target": "ESNext",
        "moduleResolution": "nodenext",
        "outDir": "build",
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"]
        }
    }
}
